    <style>
    *{
        margin: 0;
        padding: 0;
    }
    li{
        list-style: none;
    }
    .clear{
        display: block;
        content: '';
        clear: both;
    }
    .fl{
        float: left;
    }
    .fr{
        float: right;
    }
    .news-nav{
        width: 980px;
        height: 65px;
        border-bottom: #E4E4E5 solid 1px;
        margin: 0 auto;
    }
    .news-li li{
         float: left;
         font-size: 15px;
         line-height: 64px;
         margin-right: 60px;
         color: #666666;
    }
    .news-li li:nth-child(2){
        color: #f00;
    }
    .news-li li:hover{
        color: #f00;
        cursor: pointer;
    }
    /* 更多下面二级菜单     */
    .most{
      width: 100px;
      height: 120px;
      background: #FAFAFA;
      position: absolute;
      z-index: 1;
      top: 50px;
      line-height: 20px;
      display: none;
    }
    .most-one{
        width: 80px;
        height: 40px;
        border-bottom: 1px #DEDEDE solid;
        text-align: center;
        margin-left: 10px;
        line-height: 40px;
        color: #333333;
    }
    .most-one:hover{
        color: #FF0000;
    }
    .most-one:nth-child(3){
        border: none;
    }
    .m-most{
        position: relative;
    }
    .m-most:hover .most{
        display: block;
    }
/* 输入框     */
    .input-box{
        width: 70%;
        height: 50px;
        /* border: #FF0000 solid 1px; */
        margin: 0 auto;
        margin-top: 50px;
        display: flex;
    }
    input{
        width: 200px;
        height: 35px;
        color:#ccc;
        margin-right: 60px;
        margin-top: 7px;
        outline: none;
    }
    .search-d{
        width: 210px;
        height: 35px;
        /* border: springgreen solid; */
        position: relative;
      
    }
    #ser{
        padding-left: 10px;
    }
    .search-d i{
        position: absolute;
        right: 25px;
        top: 15px;
    }
/* 内容     */
    .new-content{
        width: 70%;
        height: 1100px;
        /* border: #FF0000 solid 1px; */
        margin: 0 auto;
        margin-top: 50px;
        display: flex;
    }
    .new-content ul li{
        width: 100%;
        height: 200px;
        /* border: olive solid 1px; */
        margin-bottom: 20px;
    }
    .new-content ul li .content-l{
        width: 30%;
        height: 200px;
        /* border: olive solid 1px; */
    }
    .new-content ul li .content-r{
        width: 65%;
        height: 200px;
        /* border: olive solid 1px; */
    }
    .content-r .content-p{
        width: 420px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        font-size: 17px;
        margin-top: 10px;
    }
    .content-p:hover{
        cursor: pointer;
    }
    .content-r  .content-s{
        color: #666666;
        margin-left: 80%;
        
    }
    .find{
        margin-top: 80px;
        font-size: 14px;
        color: #ccc;
    }
    .find:hover{
        color: #f00;
        cursor: pointer;
    }
