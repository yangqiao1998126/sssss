<body>
        <div class="news-nav">
            <ul class="news-li .clear" >
                <a href="/news"><li>新闻中心</li></a> 
                <li>集团新闻</li>
                <li>产品新闻</li>
                <li>视频新闻</li>
                <li>第三方观点</li>
                <li class="m-most">更多
                    <div class="most">
                            <p class="most-one">服务新闻</p>
                            <p class="most-one">服务新闻</p>
                            <p class="most-one">新闻</p>
                    </div>
                </li>
            </ul>  
        </div>
        <div class="input-box">
        <input id="m1" type="month" name="month" >
        <input id="m2" type="month" name="month" >
        <div class="search-d"><input id="ser" type="text" placeholder="查询关键字"><i class="fa fa-search"></i></div>
        </div>
        <div class="new-content">
            <ul>
                <%for(var i=0;i<data.length;i++){ %>
                    <li class="clear new-li" id="<%= data[i]._id%>">
                        <div class="content-l fl">
                            <img width="100%" height="200px" src="<%= data[i].src%>" alt="">
                        </div>
                        <div class="content-r fr">
                            <p class="content-p"><%= data[i].title%></p>
                            <br><span class="content-s">2019-09-12</span>
                            <p class="find"><%= data[i].desc%>>></p>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
       
        <script>
            var find = document.querySelectorAll('.find')
            var contentp = document.querySelectorAll('.content-p')
            for(var i=0;i<find.length;i++){
                find[i].onclick = function(){
                    console.log(1)
                    location.href = '/newsContent'
                }
                contentp[i].onclick = function(){
                    console.log(2)
                    location.href = '/newsContent'
                }
            }


            var newli = document.getElementsByClassName('new-li')
            for(let i=0;i<newli.length;i++){
                newli[i].onclick = function(){
                  location.href = `/newsContent/${this.id}`
                }
            }
        </script>
